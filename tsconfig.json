{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
